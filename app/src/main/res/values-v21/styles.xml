<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="style_main">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:maxWidth">380dp</item>
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="txt_cardview">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:layout_alignStart">@+id/detail_name</item>
        <item name="android:paddingBottom">@dimen/d2dp</item>
        <item name="android:paddingRight">@dimen/d2dp</item>
        <item name="android:paddingTop">@dimen/d2dp</item>
    </style>

</resources>